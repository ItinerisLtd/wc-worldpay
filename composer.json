{
    "name": "itinerisltd/wc-worldpay",
    "type": "wordpress-plugin",
    "description": "WorldPay integration for WooCommerce.",
    "keywords": [
        "worldpay",
        "gateway",
        "payment",
        "wc",
        "woocommerce",
        "wordpress",
        "wp"
    ],
    "homepage": "https://github.com/ItinerisLtd/wc-worldpay",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Itineris Limited",
            "email": "hello@itineris.co.uk",
            "homepage": "https://itineris.co.uk/",
            "role": "Company"
        },
        {
            "name": "Tang Rufus",
            "email": "tangrufus@gmail.com",
            "homepage": "https://typist.tech/",
            "role": "Developer"
        }
    ],
    "repositories": {
        "omnipay-worldpay": {
            "type": "vcs",
            "url": "https://github.com/ItinerisLtd/omnipay-worldpay.git",
            "only": [
                "omnipay/worldpay"
            ]
        }
    },
    "require": {
        "php": "^7.2",
        "ext-curl": "*",
        "composer/installers": "^1.5",
        "league/omnipay": "^3.0",
        "omnipay/worldpay": "dev-cloudflare-support"
    },
    "require-dev": {
        "automattic/vipwpcs": "^0.3.0",
        "roave/security-advisories": "dev-master",
        "wp-coding-standards/wpcs": "^1.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Itineris\\WCWorldpay\\": "src/"
        }
    },
    "scripts": {
        "check-style": "phpcs --colors -p",
        "pretag": [
            "composer update --no-suggest",
            "@check-style",
            "composer normalize",
            "doctoc README.md",
            "github_changelog_generator --no-verbose"
        ]
    },
    "support": {
        "email": "hello@itineris.co.uk",
        "issues": "https://github.com/ItinerisLtd/wc-worldpay/issues",
        "source": "https://github.com/ItinerisLtd/wc-worldpay"
    }
}
